rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Rule 1: Allow specific users (n8x4E54bxXYDjVOIctSLz2CCrw32 and 2z66bdeSqERhWNrdgYPBCb09QJ42) full read and write access to all documents.
      allow read, write: if request.auth.uid in ['n8x4E54bxXYDjVOIctSLz2CCrw32', '2z66bdeSqERhWNrdgYPBCb09QJ42'];

      // Rule 2: Allow non-authenticated users to ONLY create new documents.
      // They cannot read, update, or delete anything.
      allow create: if request.auth == null;
    }
  }
}