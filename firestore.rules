rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Rule 1: Allow the specific user (n8x4E54bxXYDjVOIctSLz2CCrw32) full read and write access to all documents.
      allow read, write: if request.auth.uid == 'n8x4E54bxXYDjVOIctSLz2CCrw32';

      // Rule 2: Allow non-authenticated users to ONLY create new documents.
      // They cannot read, update, or delete anything.
      allow create: if request.auth == null;
    }
  }
}